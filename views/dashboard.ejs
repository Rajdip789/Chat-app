<%- include('layouts/header.ejs') %>
			<div class="row">
				<div class="col-md-3">
					<ul class="list-group">

						<% if(userList.length == 0) { %>
							<h2>No Users found!</h2>
						<% } %>

						<%
							if(userList.length > 0) {
								for(let i = 0; i< userList.length; i++) {
									%>
										<li class="list-group-item user-list app__flex" data-id = "<%= userList[i]._id %>">
											<div class="app__flex user__image">
												<img src=<%= process.env.ORIGIN_URL %>/<%=userList[i].image %> alt="user logo" height="70%">
											</div>
											<div class="flex-grow-1">
												<%= userList[i].username %>
												<%
													if(userList[i].isOnline) {
														%>
															<sup class="online__status" id="<%= userList[i]._id %>-status" >Online</sup>
														<%
													} else {
														%>
															<sup class="offline__status" id="<%= userList[i]._id %>-status" >Offline</sup>
														<%
													} 
												%>
											</div>
										</li>
									<%
								}
							}
						%>
					</ul>
				</div>
				
				<div class="app__flex col-md-9 p-2" id="start-chat">
					<h1 class="start-head"> Click to Start a Chat</h3>

					<div class="chat-section">
						<div id="chat-container">
							<!-- <div class="current__user__chat">Hi</div>
							<div class="opposite__user__chat">Hi</div> -->
						</div>

						<form action="" id="chat-form" class="app__flex">
							<input type="text" name="message" placeholder="Enter message" id="message" class="message" required>
							<button type="submit" value="" class="btn btn-secondary app__flex"><i class="fa fa-paper-plane send" aria-hidden="true"></i></button>
							<!-- <span type="submit" class="fa fa-paper-plane send" aria-hidden="true"></span> -->
						</form>
					</div>
				</div>
			</div>

<%- include('layouts/footer.ejs') %>
